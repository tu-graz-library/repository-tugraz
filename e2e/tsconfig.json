{
  "compilerOptions": {
    "target": "ES2020",  
    "module": "ESNext",  
    "moduleResolution": "node",  
    "strict": true,  
    "esModuleInterop": true, 
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,  
    "types": ["node", "@playwright/test"]  
  },
  "include": [
    "**/*.ts" 
  ],
  "exclude": [
    "node_modules",  
    "test-results", 
    "playwright-report"  
  ]
} 